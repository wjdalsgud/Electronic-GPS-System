<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ball_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4px"
    app:cardCornerRadius="8px"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edge">

        <TextView
            android:id="@+id/bubble_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="장소명"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bubble_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/star"
            android:text="별점"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/bubble_title"
            app:layout_constraintTop_toBottomOf="@+id/bubble_title" />

        <TextView
            android:id="@+id/bubble_culture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   문화시설"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/bubble_star"
            app:layout_constraintTop_toBottomOf="@+id/bubble_star" />

        <TextView
            android:id="@+id/bubble_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타입 : 미등록"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/bubble_culture"
            app:layout_constraintTop_toBottomOf="@+id/bubble_culture" />

        <TextView
            android:id="@+id/bubble_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상태 : 미등록"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/bubble_charge"
            app:layout_constraintTop_toBottomOf="@+id/bubble_charge" />

        <TextView
            android:id="@+id/bubble_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/bubble_state"
            app:layout_constraintTop_toBottomOf="@+id/bubble_state" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="클릭해서 추가 정보"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bubble_subtitle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>